{
  "version": 2,
  "name": "ecommerce-intern",
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "templates/**",
          "node_modules/@sparticuz/chromium/**",
          "node_modules/puppeteer-core/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST","PUT","PATCH","DELETE"],
      "headers": {
        "Content-Type": "application/pdf"
      }
    }
  ],
  "functions": {
    "api/*.js": {
      "memory": 3008,
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  }
}